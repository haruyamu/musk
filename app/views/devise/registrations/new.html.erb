<div class="box">
  <div class="box-inner">
    <%= form_with model: @user, url:  user_registration_path, local: true do |f| %>
    <h1>新規登録</h1>
    <div class="box-name">
      <%= f.label :name, "nickname" %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>
    <div class="box-email">
      <%= f.label :email, "Eメール" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "box_width" %>
    </div>
    <div class="box-password">
      <div class="a-row">
        <div class="column-left">
          <%= f.label :password, "パスワード" %>
        </div>
      </div>
      <%= f.password_field :password, autocomplete: "current-password",class: "box_width" %>
    </div>
    <div class="actions">
      <%= f.submit "新規登録", class: :form__btn  %>
    </div>
    <% end %>
  </div>
</div>