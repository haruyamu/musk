<div class="box">
  <div class="box-inner">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h1>ログイン</h1>
    <div class="box-email">
      <%= f.label :email, "Eメール" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "box_width" %>
    </div>
    <div class="box-password">
      <div class="a-row">
        <div class="column-left">
          <%= f.label :password, "パスワード" %>
        </div>
      </div>
      <%= f.password_field :password, autocomplete: "current-password",class: "box_width" %>
    </div>
    <div class="box-login">
      <%= f.submit "ログイン",class: :form__btn %>
    </div>
    <% end %>

    <div class="box-newusr">
      <p><span>------------</span> 新規登録<span>------------</span></p>
      <%= link_to "新規アカウントを作成", new_user_registration_path %>
    </div>
  </div>
</div>